{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "dotnet publish SmartSurfSpots.API/SmartSurfSpots.API.csproj -c Release -o out"
  },
  "deploy": {
    "startCommand": "cd out && dotnet SmartSurfSpots.API.dll",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}